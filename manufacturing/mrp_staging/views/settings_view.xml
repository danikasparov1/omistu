<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit the settings view to add fields for production stage and steps -->
        <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.mrp</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="35"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
<xpath expr="//div[@id='mrp_mps']" position="inside">
                    <div>
                        <h2>Production Staging Settings</h2>
                        <div class="row mt16 o_settings_container">
                            <!-- Stage Selection Field -->
                            <div class="col-lg-6 col-12 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="stage_name_id"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="stage_name_id"/>
                                    <div class="text-muted">
                                        Select the production stage to manage its steps.
                                    </div>
                                </div>
                            </div>

                            <!-- Production Steps Selection Field -->
                            <div class="col-lg-6 col-12 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="production_steps_ids" widget="many2many_tags"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="production_steps_ids"/>
                                    <div class="text-muted">
                                        Manage the production steps for the selected stage.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
 