<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="mrp_plan_template_action" model="ir.actions.act_window">
        <field name="name">Manufacturing Plan</field>
        <field name="res_model">mrp.plan.template</field>
        <field name="view_mode">tree,form</field>

        <field name="help" type="html">
            <p>Create new Record</p>
        </field>
    </record>
    <record id="mrp_plan_template_view_tree" model="ir.ui.view">
        <field name="name">mrp.plan.template.view.tree</field>
        <field name="model">mrp.plan.template</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" />
              
            </tree>
        </field>
    </record>
    <record id="seq_mrp_plan_template" model="ir.sequence">
        <field name="name">MRP Planning Sequence</field>
        <field name="code">mrp.plan.template</field>
        <field name="prefix">PLAN/</field>
        <field name="padding">5</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>
    <record id="mrp_plan_template_view_form" model="ir.ui.view">
    <field name="name">mrp.plan.template.view.form</field>
    <field name="model">mrp.plan.template</field>
    <field name="arch" type="xml">
        <form string="Manufacturing Plan Template">

            
            <sheet>
               

                <group>
                    <field name="name" />
                </group>
                <group string="Criteria">
                    <group>
                        <field name="od_min" 
                             />
                        <field name="od_max" 
                             />
                        <field name="t_min" 
                             />
                        <field name="t_max" 
                             />
                        <field name="sdr" 
                             />
                    </group>
                    <group>
                        <field name="pn" 
                             />
                        <field name="average_kg_per_m" 
                           readonly="1" />
                        <field name="meter" 
                             />
                        <field name="kg" 
                             />
                        <field name="estimated_scrap_kg" 
                           readonly="1" />
                    </group>
                    <group>
                        <field name="total_rm_used" 
                             />
                        <field name="requested_rm_in_bag" 
                             />
                        <field name="required_coil_length" 
                             />
                    </group>
                </group>
             
               
            </sheet>
            <div class="oe_chatter">
                <field name="message_ids" widget="mail_thread" />
                <field name="activity_ids" widget="mail_activity" />
            </div>
        </form>
    </field>
</record>

</odoo>