<odoo>
	<template id="account_move">
		<t t-call="web.html_container">
			<t t-call="web.external_layout">
				<div class="page">
					<t t-foreach="docs" t-as="doc">
						<div class="text-start ml-3">
							<p>
								<i class="fa fa-industry">
								</i>
								Factory:
								<u>
									Koye Feche, Kaliti Sub City
								</u>
							</p>
							<p>
								<i class="fa fa-shop">
								</i>
								Show Room:
								<u>
									Shola, Megenagna, Yeka Sub City
								</u>
							</p>
							<p>
								<i class="fa fa-globe">
								</i>
								<u>
									www.mwaplastic.com
								</u>
							</p>
							<p>
								<i class="fa fa-envelope">
								</i>
								<u>
									mwaplasticinfo@gmail.com
								</u>
							</p>
							<p>
								<i class="fa fa-phone">
								</i>
								<u>
									+251903888444 / +251903888666
								</u>
							</p>
						</div>
						<!-- Document Info Section -->
						<div class="text-end mr-3">
							<p>
								Ref:
								<u>
									<t t-esc="doc.name" />
								</u>
							</p>
							<p>
								Effective Date:
								<u>
									<t t-esc="doc.invoice_date" />
								</u>
							</p>
						</div>
						<!-- Invoice Title -->
						<div class="text-center m-2 mb-3">
							<h3>
								Proforma Invoice
							</h3>
						</div>
						<!-- Customer Info -->
						<div class="row">
							<div class="col-6">
								<p>
									<strong>
										To:
									</strong>
									<t t-esc="doc.invoice_partner_display_name" />
								</p>
								<p>
									<strong>
										Tel:
									</strong>
									<t t-esc="doc.partner_id.phone" />
									/
									<t t-esc="doc.partner_id.mobile" />
								</p>
							</div>
						</div>
						<hr />
						<!-- Invoice Line Items -->
						<div class="text-center">
							<table class="table table-bordered">
								<thead>
									<tr>
										<th>
											S.N
										</th>
										<th>
											Description
										</th>
										<th>
											UOM
										</th>
										<th>
											Qty
										</th>
										<th>
											Discount
										</th>
										<th>
											Unit Price
										</th>
										<th>
											Line Total
										</th>
									</tr>
								</thead>
								<tbody>
									<t t-set="count" t-value="1" />
									<t t-foreach="doc.invoice_line_ids" t-as="line">
										<tr>
											<td>
												<t t-esc="count" />
											</td>
											<td>
												<t t-esc="line.name" />
											</td>
											<td>
												<t t-esc="line.product_id.uom_id.name" />
											</td>
											<td>
												<t t-esc="line.quantity" />
											</td>
											<td>
												<t t-esc="line.discount" />
											</td>
											<td>
												<t t-esc="line.price_unit" />
											</td>
											<td>
												<t t-esc="line.price_subtotal" />
											</td>
										</tr>
										<t t-set="count" t-value="count + 1" />
									</t>
									<!-- Summary Section -->
									<tr>
										<td colspan="5">
										</td>
										<td>
											<strong>
												Subtotal:
											</strong>
										</td>
										<td>
											<t t-esc="doc.amount_untaxed" />
										</td>
									</tr>
									<tr>
										<td colspan="5">
										</td>
										<td>
											<strong>
												Taxes:
											</strong>
										</td>
										<td>
											<t t-set="tax_payment" t-value="doc.amount_untaxed * 0.15"/>
                                            <t t-esc="tax_payment"/>
										</td>
									</tr>
									<tr>
										<td colspan="5">
										</td>
										<td>
											<strong>
												Total:
											</strong>
										</td>
										<td>
											<t t-esc="doc.amount_total" />
										</td>
									</tr>
								</tbody>
							</table>
						</div>
						<div class="row mt-2 text-start">
							
                            <div class="col-6 p-3">
                            <p>Price Validity: <u><t t-esc="doc.amount_residual"/></u></p>
                            <p>Due Date: <u><t t-esc="doc.invoice_date_due"/></u></p>
                    <p>Payment term: <u><t t-esc="doc.invoice_payment_term_id.name"/></u></p>
                                                            <p>Delivery Address:<u><t t-esc="doc.partner_id.street"/>,<t t-esc="doc.partner_id.city"/>,<t t-esc="doc.partner_id.state_id.name"/></u></p></div>
						</div>
					</t>
				</div>
			</t>
		</t>
	</template>
</odoo>
