<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="mrp_planing_action" model="ir.actions.act_window">
        <field name="name">Manufacturing Plan</field>
        <field name="res_model">mrp.planing</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>Create new Record</p>
        </field>
    </record>

    <record id="mrp_planing_view_tree" model="ir.ui.view">
        <field name="name">mrp.planing.view.tree</field>
        <field name="model">mrp.planing</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="product"/>
                <field name="quantity"/>
                <field name="expiration_date"/>
                <field name="scheduled_date"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="seq_mrp_planing" model="ir.sequence">
        <field name="name">MRP Planning Sequence</field>
        <field name="code">mrp.planing</field>
        <field name="prefix">PLAN/</field>
        <field name="padding">5</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>

    <record id="mrp_planing_view_form" model="ir.ui.view">
        <field name="name">mrp.planing.view.form</field>
        <field name="model">mrp.planing</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar" statusbar_visible="draft,confirmed,approved,received"/>
                    <button string="Confirm" 
                            name="confirm" 
                            type="object"
                            class="btn-primary"
                            invisible="status != 'draft'"
                            groups="mrp_staging.group_production_manager"/>
                    <button string="Approve" 
                            name="approve" 
                            type="object"
                            class="btn-primary"
                            invisible="status != 'confirmed'"
                            groups="mrp_staging.group_production_manager"/>
                    <button string="Reset To Draft" 
                            name="reset_to_draft" 
                            type="object"
                            class="btn-secondary"
                            invisible="status not in ('draft', 'approved', 'received')"
                            groups="mrp_staging.group_production_manager"/>
                    <button string="Received"  
                            name="received" 
                            type="object" 
                            class="btn-primary"
                            groups="pre_mrp.group_shift_leader"
                            invisible="status != 'approved'"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <group>
                        <group>
                            <field name="product" readonly="status not in ('confirmed', 'approved')"/>
                            <field name="quantity" readonly="status in ('confirmed','approved')"/>
                            <field name="expiration_date" readonly="status not in ('confirmed','approved')"/>
                            <field name="template"/>
                            <field name="sales_order" readonly="1"/>
                        </group>
                        <group>
                            <field name="scheduled_date" 
                                   readonly="status == 'approved'" 
                                   required="status == 'confirmed'"/>
                            <field name="created_by" readonly="1"/>
                            <field name="created_date" readonly="1"/>
                            <field name="approved_by" readonly="1"/>
                            <field name="received_by" readonly="1"/>
                        </group>
                    </group>
                    <group string="Criteria">
                        <group>
                            <field name="od_min" readonly="status == 'approved'"/>
                            <field name="od_max" readonly="status == 'approved'"/>
                            <field name="t_min" readonly="status == 'approved'"/>
                            <field name="t_max" readonly="status == 'approved'"/>
                            <field name="sdr" readonly="status == 'approved'"/>
                        </group>
                        <group>
                            <field name="pn" readonly="status == 'approved'"/>
                            <field name="average_kg_per_m" readonly="1"/>
                            <field name="meter" readonly="status == 'approved'"/>
                            <field name="kg" readonly="status == 'approved'"/>
                            <field name="estimated_scrap_kg" readonly="1"/>
                        </group>
                        <group>
                            <field name="total_rm_used" readonly="status == 'approved'"/>
                            <field name="requested_rm_in_bag" readonly="status == 'approved'"/>
                            <field name="required_coil_length" readonly="status == 'approved'"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" readonly="status == 'approved'"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids"/>
                    <field name="activity_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>