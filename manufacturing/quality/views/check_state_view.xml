<odoo>
  <record id="view_quality_check_state_form" model="ir.ui.view">
      <field name="name">quality.check.state.form</field>
      <field name="model">quality.check.state</field>
      <field name="arch" type="xml">
          <form string="Quality Check State">
              <sheet>
                  <group>
                      <field name="stage_field_id"/>
                      <field name="check_field_id"/>
                      <field name="numeric_measure"/>
                    </group>

<group string="Numeric Measure" attrs="{'invisible': [('numeric_measure', '!=', True)]}">
    <group>
        <field name="start_threshold" />
                <field name="end_threshold" />

        </group>

        <group>
            <field name="unit" />
        </group>
</group>
              </sheet>
          </form>
      </field>
  </record>

  <record id="view_quality_check_state_tree" model="ir.ui.view">
      <field name="name">quality.check.state.tree</field>
      <field name="model">quality.check.state</field>
      <field name="arch" type="xml">
          <tree string="Quality Check State">
            <field name="test_id" />
              <field name="stage_field_id"/>
              <field name="check_field_id"/>
              <field name="is_checked"/>
          </tree>
      </field>
  </record>


  <record id="action_quality_check_state" model="ir.actions.act_window">
    <field name="name">Check States</field>
    <field name="res_model">quality.check.state</field>
    <field name="view_mode">tree,form</field>
</record>
</odoo>
