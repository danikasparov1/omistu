<odoo>
    <!-- Form View -->
    <record id="view_quality_product_test_form" model="ir.ui.view">
        <field name="name">quality.product.test.form</field>
        <field name="model">quality.product.test</field>
        <field name="arch" type="xml">
            <form string="Quality Product Test" create="false">
                <sheet>
                    <group>
                        <field name="product" required="1"/>
                        <field name="stage" options="{'no_open': True}" required="1"/>
                        <field name="pass_fail" readonly="1"/>
                        <field name="description" placeholder="Enter additional notes or observations"/>
                    </group>
                    <notebook>
                        <page string="Check States">
                            <field name="check_states">
                                <tree create="false" edit="true">
                                    <field name="check_field_id" string="Check Field" required="1"/>
                                    <field name="test_quantity" string="Test Quantity"/>
                                    <field name="unit" string="Unit"/>
                                    <field name="is_checked" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_quality_product_test_kanban" model="ir.ui.view">
        <field name="name">quality.product.test.kanban</field>
        <field name="model">quality.product.test</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" default_group_by="stage" create="false">
                <field name="product"/>
                <field name="stage"/>
                <field name="pass_fail"/>
                <field name="description"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click oe_kanban_card {{ record.pass_fail.raw_value and 'o_kanban_pass' or 'o_kanban_fail' }}">
                            <div class="o_kanban_details">
                                <strong><field name="product"/></strong>
                                <div><field name="stage"/></div>
                                <div><field name="description"/></div>
                                <div>
                                    <strong>Status:</strong>
                                    <span t-if="record.pass_fail.raw_value">Passed</span>
                                    <span t-else="record.pass_fail.raw_value == False">Failed</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_quality_product_test" model="ir.actions.act_window">
        <field name="name">Quality Product Tests</field>
        <field name="res_model">quality.product.test</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_create">
                Click to create a new quality product test.
            </p>
        </field>
        <field name="context">{'create': False}</field>
    </record>
</odoo>