<odoo>
    <record id="view_quality_check_template_tree" model="ir.ui.view">
        <field name="name">quality.check.template.tree</field>
        <field name="model">quality.check.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="stage_id"/>
                <field name="min_threshold"/>
                <field name="max_threshold"/>
            </tree>
        </field>
    </record>

    <record id="view_quality_check_template_form" model="ir.ui.view">
        <field name="name">quality.check.template.form</field>
        <field name="model">quality.check.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="stage_id"/>
                        <field name="min_threshold"/>
                        <field name="max_threshold"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_quality_check_template" model="ir.actions.act_window">
        <field name="name">Quality Check Templates</field>
        <field name="res_model">quality.check.template</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_quality_check_template" name="Quality Check Templates"
        parent="menu_quality_root"
        action="action_quality_check_template"/>
</odoo>
