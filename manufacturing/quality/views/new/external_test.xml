<odoo>
    <!-- Tree View -->
    <record id="view_quality_external_test_tree" model="ir.ui.view">
        <field name="name">quality.external.test.tree</field>
        <field name="model">quality.external.test</field>
        <field name="arch" type="xml">
            <tree string="External Test Reports">
                <field name="name"/>
                <field name="customer"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_quality_external_test_form" model="ir.ui.view">
        <field name="name">quality.external.test.form</field>
        <field name="model">quality.external.test</field>
        <field name="arch" type="xml">
            <form string="External Test Report">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="qa" />
                        <field name="customer"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_quality_external_test_kanban" model="ir.ui.view">
        <field name="name">quality.external.test.kanban</field>
        <field name="model">quality.external.test</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_example">
                <field name="name"/>
                <field name="customer"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_record">
                            <div>
                                <strong><field name="name"/></strong>
                            </div>
                            <div>
                                <span>Customer: <field name="customer"/></span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_quality_external_test_pivot" model="ir.ui.view">
        <field name="name">quality.external.test.pivot</field>
        <field name="model">quality.external.test</field>
        <field name="arch" type="xml">
            <pivot string="External Test Reports">
                <field name="customer" type="row"/>
            </pivot>
        </field>
    </record>

    
    <record id="action_quality_external_test_report" model="ir.actions.act_window">
        <field name="name">External Test Reports</field>
        <field name="res_model">quality.external.test</field>
        <field name="view_mode">kanban,pivot,graph,tree,form</field>
        <field name="target">current</field>
       


    </record>

    <!-- Menu Item -->
 <menuitem id="menu_quality_external_test" 
              name="External Test Reports" 
              parent="menu_quality_root" 
              action="action_quality_external_test_report"
            />
</odoo>
