<odoo>
    <record id="view_quality_stage_fields_form" model="ir.ui.view">
        <field name="name">quality.stage.fields.form</field>
        <field name="model">quality.stage.fields</field>
        <field name="arch" type="xml">
            <form string="Quality Stage Fields">
                <sheet>
                    <group>
                        <field name="stage_id"/>
                        <!-- <field name="check_field_ids" widget="many2many_tags"/> -->
                    </group>
                    <notebook>
                        <page string="Check States">
                            <field name="check_states">
                                <tree editable="bottom">
                                    <field name="check_field_id"/>
                                    <!-- <field name="threshold" /> -->
                                    <field name="start_threshold"/>
                                    <field name="end_threshold"/>

                                    <field name="unit" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_quality_stage_fields_tree" model="ir.ui.view">
        <field name="name">quality.stage.fields.tree</field>
        <field name="model">quality.stage.fields</field>
        <field name="arch" type="xml">
            <tree string="Quality Stage Fields">
                <field name="stage_id"/>
            </tree>
        </field>
    </record>

    <record id="action_quality_stage_fields" model="ir.actions.act_window">
        <field name="name">Stage Fields</field>
        <field name="res_model">quality.stage.fields</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
