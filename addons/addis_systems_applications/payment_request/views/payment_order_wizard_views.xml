<odoo>
    <record id="view_payment_order_wizard_form" model="ir.ui.view">
        <field name="name">payment.order.wizard.form</field>
        <field name="model">payment.order.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Payment Order">
                <group>
                    <field name="payment_for"/>
                    <field name="payment_reason"/>
                    <field name="date"/>
                    <field name="amount"/>
                    <!-- <field name="debit_account_id"/> -->
                    <!-- <field name="journal_id"/> -->
                </group>
                <footer>
                    <button string="Create" type="object" name="action_create_payment_order" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>