<odoo>
    <template id="manufacturing_report_template">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="production">
                <div class="page" style="border: 2px solid #333; padding: 20px; margin: 20px; page-break-inside: avoid;">
                    
                    <!-- Logo Section -->
                    <div style="text-align: center; margin-bottom: 20px;">
                        <img src="/sales_report/static/src/img/icon.png" alt="Company Logo" style="width: 100px;"/>
                        <h2 style="color: #0056b3; margin-top: 10px;">Manufacturing Report</h2>
                    </div>
                    
                    <!-- Manufacturing Order Information Table -->
                    <table style="width: 100%; border-collapse: collapse; margin-top: 20px; page-break-inside: avoid;">
                        <!-- <tr style="background-color: #f0f0f0;">
                            <th style="border: 1px solid #333; padding: 8px; text-align: left;">Field</th>
                            <th style="border: 1px solid #333; padding: 8px; text-align: left;">Information</th>
                        </tr> -->
                        <tr>
                            <td style="border: 1px solid #333; padding: 8px;">Reference</td>
                            <td style="border: 1px solid #333; padding: 8px;"><t t-esc="production.name"/></td>
                        </tr>
                        <!-- <tr>
                            <td style="border: 1px solid #333; padding: 8px;">Branch</td>
                            <td style="border: 1px solid #333; padding: 8px;"><t t-esc="production.branch_id.name"/></td>
                        </tr>
                        <tr>
                            <td style="border: 1px solid #333; padding: 8px;">Product</td>
                            <td style="border: 1px solid #333; padding: 8px;"><t t-esc="production.product_id.name"/></td>
                        </tr> -->
                        <!-- <tr>
                            <td style="border: 1px solid #333; padding: 8px;">Quantity</td>
                            <td style="border: 1px solid #333; padding: 8px;"><t t-esc="production.product_qty"/></td>
                        </tr> -->
                        <!-- <tr>
                            <td style="border: 1px solid #333; padding: 8px;">Status</td>
                            <td style="border: 1px solid #333; padding: 8px;"><t t-esc="production.state"/></td>
                        </tr> -->
                    </table>
                    
                    <!-- Footer Section -->
                    <div style="text-align: center; margin-top: 40px;">
                        <p style="color: #666;">Generated by Addis System</p>
                    </div>
                </div>
                <!-- Add a page break after each manufacturing order except the last one -->
                <t t-if="not production == docs[-1]">
                    <div style="page-break-after: always;"></div>
                </t>
            </t>
        </t>
    </template>
</odoo>
