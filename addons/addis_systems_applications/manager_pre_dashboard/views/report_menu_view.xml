<odoo>
    <record id="view_reports_list" model="ir.ui.view">
        <field name="name">report.list</field>
        <field name="model">sale.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="date" />
                <field name="user_id" />
                <!-- <field name="amount_total" /> -->
            </tree>
        </field>
    </record>

    <record id="action_view_reports" model="ir.actions.act_window">
        <field name="name">Reports</field>
        <field name="res_model">sale.report</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- <menuitem id="menu_report_list" name="Reports" action="action_view_reports" sequence="1" /> -->
</odoo>
