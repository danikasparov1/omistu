<odoo>
    <data>
        <!-- Form view for the Annual Production Plan -->
        <record id="view_form_annual_production_plan" model="ir.ui.view">
            <field name="name">annual.production.plan.form</field>
            <field name="model">annual.production.plan</field>
            <field name="arch" type="xml">
                <form string="Annual Production Plan">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="year"/>
                                <field name="product_id"/>
                                <field name="planned_quantity"/>
                                <!-- <field name="produced_quantity"/> -->
                                <field name="is_produced"/>
                            </group>
                            <!-- <group>
                                
                                <field name="status_notification" readonly="1" 
                                       t-attf-class="{'o_statusbar_red': produced_quantity < planned_quantity, 'o_statusbar_green': produced_quantity >= planned_quantity}"/>
                            </group> -->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action to show the form view -->
        <record id="action_annual_production_plan" model="ir.actions.act_window">
            <field name="name">Annual Production Plans</field>
            <field name="res_model">annual.production.plan</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Action to show the form view -->
        <record id="action_annual_production_plan" model="ir.actions.act_window">
            <field name="name">Annual Production Plans</field>
            <field name="res_model">annual.production.plan</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu item for the Annual Production Plan -->
        <menuitem id="menu_annual_production_plan" 
        parent="mrp.menu_mrp_root"
                  name="Annual Production Plans"
                  action="action_annual_production_plan"
                  sequence="10"/>
    </data>
</odoo>
