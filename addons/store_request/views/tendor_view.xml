<odoo>
    <record id="view_vendor_evaluation_score_tree" model="ir.ui.view">
        <field name="name">vendor.evaluation.score.tree</field>
        <field name="model">vendor.evaluation.score</field>
        <field name="arch" type="xml">
            <tree>
                <field name="vendor_id"/>
                <field name="committee_id"/>
                <field name="score"/>
            </tree>
        </field>
    </record>

    <record id="view_vendor_evaluation_score_form" model="ir.ui.view">
        <field name="name">vendor.evaluation.score.form</field>
        <field name="model">vendor.evaluation.score</field>
        <field name="arch" type="xml">
            <form string="Vendor Evaluation Score">
                <sheet>
                    <group>
                        <field name="vendor_id"/>
                        <field name="committee_id"/>
                        <field name="score"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_vendor_evaluation_score" model="ir.actions.act_window">
        <field name="name">Vendor Evaluation Scores</field>
        <field name="res_model">vendor.evaluation.score</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_vendor_evaluation_root" name="Vendor Evaluation" sequence="10"/>

    <menuitem id="menu_vendor_evaluation_score"
              name="Evaluation Scores"
              action="action_vendor_evaluation_score"/>
</odoo>


