<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_mrp_production_form_inherit_dry" model="ir.ui.view">
        <field name="name">mrp.production.form.inherit.dry</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view
"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='mo_form_view']" position="inside">
                <group>
                    <field name="is_dry_product"/>
                    <field name="dry_consumed_product_id" attrs="{'invisible': [('is_dry_product', '=', False)]}"/>
                    <field name="dry_consumed_qty" readonly="1" attrs="{'invisible': [('is_dry_product', '=', False)]}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>