<odoo>
    <record id="view_store_request_form" model="ir.ui.view">
        <field name="name">store.request.form</field>
        <field name="model">store.request</field>
        <field name="arch" type="xml">
            <form string="Store Request">
      

                      <header>
                        <button name="action_to_approve" type="object" string="Submit"  invisible="state != 'draft'" />
                        <button name="action_approve" type="object" string="Approve" invisible="state != 'to_approve'"/>
                        <button name="action_reject" type="object" string="Reject"  invisible="state == 'to_approve'"/>
                        <!-- <button name="action_print_report" type="object" string="Print Report" class="btn-primary"/> -->
                        <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="requested_by" readonly="1"/>
                        <field name="date_requested"/>
                        <field name="description"/>
                        <field name="state" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Request Lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                    <field name="estimated_cost"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="seq_store_request" model="ir.sequence">
        <field name="name">Store Request</field>
        <field name="code">store.request</field>
        <field name="prefix">STO</field>
        <field name="padding">4</field>
        <field name="number_increment">1</field>
    </record>

    <record id="view_store_request_tree" model="ir.ui.view">
        <field name="name">store.request.tree</field>
        <field name="model">store.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="requested_by"/>
                <field name="date_requested"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_store_request" model="ir.actions.act_window">
        <field name="name">Store Requests</field>
        <field name="res_model">store.request</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_store_request" name="Store Request" sequence="10"/>
    <menuitem id="menu_store_request_items" name="Store Requests" parent="menu_store_request" action="action_store_request"/>
</odoo>
