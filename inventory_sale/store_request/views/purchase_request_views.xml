<odoo>
    <data>
        <!-- Sequence for Store Request -->
        <record id="seq_store_request" model="ir.sequence">
            <field name="name">Store Request</field>
            <field name="code">store.request</field>
            <field name="prefix">SR</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Store Request Form View -->
        <record id="view_store_request_form" model="ir.ui.view">
            <field name="name">store.request.form</field>
            <field name="model">store.request</field>
            <field name="arch" type="xml">
                <form string="Store Request">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="requested_by"/>
                            <field name="date_requested"/>
                            <field name="description"/>
                            <field name="state" readonly="1"/>
                            <field name="operation_start_date"/>
                            <field name="operation_end_date"/>
                            <field name="operation_type"/>
                            <field name="operation_name"/>
                        </group>
                        <notebook>
                            <page string="Products">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="product_qty"/>
                                        <field name="estimated_cost"/>
                                        <field name="last_vendor_id" readonly="1"/>
                                        <field name="last_price" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Store Request Tree View -->
        <record id="view_store_request_tree" model="ir.ui.view">
            <field name="name">store.request.tree</field>
            <field name="model">store.request</field>
            <field name="arch" type="xml">
                <tree string="Store Requests">
                    <field name="name"/>
                    <field name="requested_by"/>
                    <field name="date_requested"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Store Request Action -->
        <record id="action_store_request" model="ir.actions.act_window">
            <field name="name">Store Requests</field>
            <field name="res_model">store.request</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Store Request
                </p>
            </field>
        </record>

        <!-- Store Request Menu -->
        <menuitem id="menu_store_request_root" name="Store Requests" sequence="10"/>
        <menuitem id="menu_store_request" name="Store Requests" parent="menu_store_request_root" action="action_store_request" sequence="10"/>
    </data>
</odoo>