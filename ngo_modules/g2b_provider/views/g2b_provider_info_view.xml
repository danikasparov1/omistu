<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record  id="g2b_provider_info_form_view" model="ir.ui.view">
           <field name="name">G2B Provider Information</field>
           <field name="model">g2b.provider.info</field>
           <field name="arch" type="xml">
               <form>
                <header>
                    <button name="confirm_state" string="Confirm" type="object" class="btn-success"
                            invisible="state != 'registered'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                   <sheet>
                       <div class="oe_title">
                        <h1 style="display: flex;">
                            <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image'}"/>
                        </h1>
                      </div>
                        <group class="form-title">
                       <group>
                            <field name="id_type"/>
                            <field name="name"/>
                            <field name="birth_date"/>
                            <field name="region"/>
                            <field name="woreda"/>
                        </group>
                            <group>
                                 <field name="beneficiary_id"/>
                                 <field name="phone"/>
                                 <field name="zone"/>
                                 <field name="kebele"/>
                            </group>
                       </group>
                        <notebook>
                         <page string="Products" name="product_line">
                            <field name="state" invisible="1"/>
                            <field name="product_line" widget="section_and_note_one2many" mode="tree,kanban" readonly = "state in ['done','cancel']">
                                <tree string="Product List" editable="bottom">
                                    <control>
                                       <create name="add_product_control" string="Add a Product"/>
                                    </control>
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="qty"/>
                                    <field name="unit_price"/>
                                    <field name="sub_total" sum="Total"/>
                                </tree>
                            </field>
                        </page>
<!--                          <page string="Vouchers" name="package_list">-->
<!--                        </page>-->
                     </notebook>
                   </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
               </form>
           </field>
       </record>
       <record  id="g2b_provider_info_tree_view" model="ir.ui.view">
           <field name="name">G2B Provider info</field>
           <field name="model">g2b.provider.info</field>
           <field name="arch" type="xml">
               <tree>
                    <field name="id_type"/>
                    <field name="beneficiary_id"/>
                    <field name="name"/>
                    <field name="birth_date"/>
                    <field name="phone"/>
               </tree>
           </field>
       </record>
       <record id="g2b_provider_info_action_id" model="ir.actions.act_window">
           <field name="name">G2B Provider Information</field>
           <field name="type">ir.actions.act_window</field>
          <field name="res_model">g2b.provider.info</field>
           <field name="view_mode">tree,form</field>
           <field name="type">ir.actions.act_window</field>
       </record>

</odoo>