<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record  id="g2b_voucher_detail_form_view" model="ir.ui.view">
           <field name="name">G2B voucher Information</field>
           <field name="model">g2b.voucher.detail</field>
           <field name="arch" type="xml">
               <form>
                 <header>
                    <field name="state" widget="statusbar"/>
                 </header>
                   <sheet>
                       <div class="oe_title">
                       <h4 style="display: flex; align-items: center;">
                            <b>Code: </b>
                            <field name="name" style="margin-left: 10px;"/>
                           <div style="margin-left: 10px;">
                              <button name="action_search_voucher"   string="Search" type="object" class="btn-success"/>
                           </div>
                           <div  style="margin-left: 10px;">
                               <button name="action_redeemed_beneficiary" string="Redeem" type="object" class="btn-success"
                            invisible="state != 'confirmed'"/>
                           </div>
                           <div  style="margin-left: 10px;">
                                <button name="action_amend_voucher" string="Claim" type="object" class="btn-success"
                            invisible="state !=  'redeemed'"/>
                           </div>
                        </h4>
                    </div>
                        <group string="G2B voucher" class="form-title">
                       <group>
                            <field name="beneficiary_id"/>
                            <field name="valid_from"/>
                            <field name="provider_id" invisible="state !=  'confirmed'"/>

                        </group>
                            <group>
                            <field name="benefit_id"/>
                            <field name="valid_to"/>
                        </group>
                       </group>
                          <notebook>
                         <page string="Package" name="package_line">
                            <field name="state" invisible="1"/>
                            <field name="package_line" widget="section_and_note_one2many" mode="tree,kanban" readonly="state in ['done','cancel']">
                                <tree string="Package List" editable="bottom">
                                    <control>
                                       <create name="add_package_control" string="Add a Package"/>
                                    </control>
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="qty"/>
                                    <field name="unit_price"/>
                                    <field name="sub_total" sum="Total"/>

                                </tree>
                            </field>
                        </page>
                     </notebook>
                   </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
               </form>
           </field>
       </record>

       <record id="g2b_voucher_detail_action_id" model="ir.actions.act_window">
           <field name="name">G2B voucher Detail</field>
           <field name="type">ir.actions.act_window</field>
          <field name="res_model">g2b.voucher.detail</field>
           <field name="view_mode">form</field>
           <field name="type">ir.actions.act_window</field>
       </record>

</odoo>