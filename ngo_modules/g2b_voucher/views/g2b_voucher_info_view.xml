<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record  id="g2b_voucher_info_form_view" model="ir.ui.view">
           <field name="name">G2B voucher Information</field>
           <field name="model">g2b.voucher.info</field>
           <field name="arch" type="xml">
               <form>
                 <header>
                     <button name="action_confirm_beneficiary" string="Confirm" type="object" class="btn-success"
                            invisible="state !=  'new'"/>
                     <button name="action_canceled_beneficiary" string="Cancel" type="object"
                            invisible="state !=  'new'"/>

                    <field name="state" widget="statusbar"/>
                 </header>
                   <sheet>
                       <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                        <group string="G2B voucher" class="form-title">
                       <group>
                            <field name="beneficiary_id"/>
                            <field name="valid_from"/>

                        </group>
                            <group>
                            <field name="benefit_id"/>
                            <field name="valid_to"/>
                        </group>
                       </group>
                          <notebook>
                         <page string="Package" name="package_line">
                            <field name="state" invisible="1"/>
                            <field name="package_line" widget="section_and_note_one2many" mode="tree,kanban" readonly ="state in ['done','cancel']">
                                <tree string="Package List" editable="bottom">
                                    <control>
                                       <create name="add_package_control" string="Add a Package"/>
                                    </control>
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="qty"/>
                                    <field name="unit_price"/>
                                    <field name="sub_total" sum="Total"/>

                                </tree>
                            </field>
                        </page>
                     </notebook>
                   </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
               </form>
           </field>
       </record>
       <record  id="g2b_voucher_info_tree_view" model="ir.ui.view">
           <field name="name">G2B voucher info</field>
           <field name="model">g2b.voucher.info</field>
           <field name="arch" type="xml">
               <tree>
                    <field name="name"/>
                    <field name="beneficiary_id"/>
                    <field name="benefit_id"/>
                   <field name="valid_from"/>
                   <field name="valid_to"/>
                   <field name="state"/>
               </tree>
           </field>
       </record>
    <record model="ir.actions.server" id="batch_confirm_action">
        <field name="name">Confirm</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_g2b_voucher_info"/>
        <field name="binding_model_id" ref="model_g2b_voucher_info"/>
        <field name="state">code</field>
        <field name="code">
            for record in records:
                if record.state == "new":
                    record.action_confirm_beneficiary()
        </field>
      </record>
       <record id="g2b_voucher_info_action_id" model="ir.actions.act_window">
           <field name="name">G2B voucher Information</field>
           <field name="type">ir.actions.act_window</field>
          <field name="res_model">g2b.voucher.info</field>
           <field name="view_mode">tree,form</field>
           <field name="type">ir.actions.act_window</field>
       </record>

</odoo>