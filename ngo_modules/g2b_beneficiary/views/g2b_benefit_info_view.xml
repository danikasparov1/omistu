<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="g2b_benefit_info_form_view" model="ir.ui.view">
        <field name="name">G2B benefit Information</field>
        <field name="model">g2b.benefit.info</field>
        <field name="arch" type="xml">
            <form>
                 <header>
                    <button name="confirm_status" string="Confirm" type="object" class="btn-success"
                            invisible ="status != 'new'"/>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                     <notebook>
                         <page string="Package" name="package_line">
                            <field name="state" invisible="1"/>
                            <field name="package_line" widget="section_and_note_one2many" mode="tree,kanban" readonly="state in ['done','cancel']">
                                <tree string="Package List" editable="bottom">
                                    <control>
                                       <create name="add_package_control" string="Add a Package"/>
                                    </control>
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="qty"/>
                                    <field name="unit_price"/>
                                    <field name="sub_total" sum="Total"/>
                                </tree>
                            </field>
                        </page>
                     </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>
    <record id="g2b_benefit_info_tree_view" model="ir.ui.view">
        <field name="name">G2B Benefit info</field>
        <field name="model">g2b.benefit.info</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
    <record id="g2b_benefit_info_action_id" model="ir.actions.act_window">
        <field name="name">G2B Benefit Information</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">g2b.benefit.info</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
