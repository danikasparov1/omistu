<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="g2b_package_line_form_view" model="ir.ui.view">
        <field name="name">G2B package line </field>
        <field name="model">g2b.package.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="benefit_id"/>
                            <field name="qty"/>
                            <field name="sub_total" sum="Total"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                             <field name="unit_price"/>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>
    <record id="g2b_package_line_tree_view" model="ir.ui.view">
        <field name="name">g2b.package.line</field>
        <field name="model">g2b.package.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="benefit_id"/>
                <field name="product_id"/>
                <field name="qty"/>
                <field name="unit_price"/>
                <field name="sub_total" sum="Total"/>
            </tree>
        </field>
    </record>
    <record id="g2b_package_line_action_id" model="ir.actions.act_window">
        <field name="name">G2B package line</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">g2b.package.line</field>
        <field name="view_mode">tree,form</field>
        <field name="type">ir.actions.act_window</field>
    </record>

</odoo>