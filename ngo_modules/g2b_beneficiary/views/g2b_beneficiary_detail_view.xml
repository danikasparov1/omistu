<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="g2b_beneficiary_detail_form_view" model="ir.ui.view">
        <field name="name">G2B beneficiary detail</field>
        <field name="model">g2b.beneficiary.detail</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                       <h4 style="display: flex; align-items: center;">
                            <b>Code: </b>
                            <field name="beneficiary_code" style="margin-left: 10px;"/>
                           <div style="margin-left: 10px;">
                              <button name="action_search_beneficiary"   string="Search" type="object" class="btn-success"/>
                           </div>
                        </h4>
                    </div>
<!--                    <div class="oe_title">-->
<!--                        <h1 style="display: flex;">-->
<!--                            <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>-->
<!--                        </h1>-->
<!--                    </div>-->
                    <group>
                        <group>
                            <field name="id_type"/>
                            <field name="name"/>
                            <field name="birth_date"/>
                            <field name="region"/>
                            <field name="woreda"/>
                        </group>
                        <group>
                            <field name="id_no"/>
                            <field name="phone"/>
                            <field name="category_id"/>
                            <field name="zone"/>
                            <field name="kebele"/>
                        </group>
                    </group>
                     <notebook>
                         <page string="Benefit" name="benefit_line1">
                            <field name="state" invisible="1"/>
                            <field name="benefit_line1" widget="section_and_note_one2many" mode="tree,kanban" readonly="state in ['done','cancel']">
                                <tree string="Benefit List" editable="bottom">
                                    <control>
                                       <create name="add_package_control" string="Add a Benefit"/>
                                    </control>
                                    <field name="benefit_id"/>
                                    <field name="description"/>
                                    <field name="qty"/>
                                    <field name="unit_price"/>
                                    <field name="sub_total" sum="Total"/>
                                </tree>
                            </field>
                        </page>
                          <page string="Vouchers" name="voucher_line1">
                               <field name="state" invisible="1"/>
                              <field name="voucher_line1" widget="section_and_note_one2many" mode="tree,kanban" readonly="state in ['done','cancel']">
                                <tree string="Voucher List" editable="bottom">
                                    <field name="voucher"/>
                                    <field name="beneficiary_id"/>
                                    <field name="benefit_id"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                     </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>
    <record id="g2b_beneficiary_detail_action_id" model="ir.actions.act_window">
        <field name="name">G2B Beneficiary detail</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">g2b.beneficiary.detail</field>
        <field name="view_mode">form</field>
        <field name="type">ir.actions.act_window</field>
    </record>
</odoo>