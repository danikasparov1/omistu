<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="owl.OwlSalesDashboard" owl="1">
        <div class="vh-100 overflow-auto bg-muted">
            <div class="row m-3">
                <div class="col-lg-7">
                    <div class="row">
                        <div class="col m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h1 class="text-primary fw-bold">ICIPE Dashboard</h1>
                                    <div>
                                         <img t-att-src="'/odoo_custom_dashboard/static/src/images/logo.png'" alt="Logo" style="width: 150px; height: 60px; border-radius: 10px;"/>
                                    </div>
                                    <div>
                                        <select class="form-select">
                                            <option value="0">Select Period</option>
                                            <option value="7">Last 7 Days</option>
                                            <option value="30">Last 30 Days</option>
                                            <option value="90">Last 90 Days</option>
                                            <option value="365">Last 365 Days</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <KpiCard name="'Beneficiary'" value="state.quotations.value" percentage="state.quotations.percentage"/>
                        <KpiCard name="'Benefits'" value="state.quotations.benefit" percentage="state.quotations.benefit_per"/>
                        <KpiCard name="'Provider'" value="state.quotations.provider" percentage="state.quotations.provider_per"/>
                        <KpiCard name="'Voucher'" value="state.quotations.voucher" percentage="state.quotations.voucher_per"/>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Beneficiary</h3>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer type="'doughnut'" title="'Top Beneficiary'"/>
                            </div>
                        </div>
                        <div class="col-lg-6 m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Top Benefits</h3>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer type="'pie'" title="'Top Sales Benefits'"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="row">
                        <div class="col m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Monthly Supports</h3>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer type="'bar'" title="'Monthly support Report'"/>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Vouchers</h3>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer type="'line'" title="'Voucher Report'"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>